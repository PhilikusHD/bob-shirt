<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Bob.Core.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Bob.Core.MainView">

	<UserControl.Styles>
		<Style Selector=".FrostedBackground">
			<Setter Property="Background" Value="#80FFFFFF"/>
			<Setter Property="Effect">
				<Setter.Value>
					<BlurEffect Radius="20"/>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Styles>

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid Classes="FrostedBackground">
		<Grid.RowDefinitions>
			<RowDefinition Height="150"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Bild oben zentriert -->
		<Image Source="avares://Bob.Core/Assets/header.png"
			   Width="120" Height="120"
			   HorizontalAlignment="Center" VerticalAlignment="Center"/>

		<!-- Inhalt -->
		<TextBlock Grid.Row="1" Text="{Binding Greeting}"
				   HorizontalAlignment="Center" VerticalAlignment="Center"
				   FontSize="22"/>
	</Grid>

</UserControl>
