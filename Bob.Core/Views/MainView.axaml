<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
			 MaxHeight="1080" MaxWidth="1920"
			 x:Class="Bob.Core.MainView">
	<Grid>
		<!-- Frosted Glass Background -->
		<Border>
			<Border.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
					<GradientStop Color="#889db4" Offset="0" />
				</LinearGradientBrush>
			</Border.Background>

			<Border.Effect>
				<BlurEffect Radius="30" />
			</Border.Effect>
		</Border>

		<!-- Banner -->
		<Grid>
			<Image
			Source="/assets/banner.png"
			Stretch="Uniform"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Margin="0,-180,0,0"
			Width="1250"
			Height="950"/>
		</Grid>


		<Grid>
			<Image
			Source="/assets/textilHinweis.png"
			Stretch="Uniform"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="-90,-90,0,0"
			Width="650"
			Height="500"/>
		</Grid>



		<Button x:Name ="UeberUnsButton" Width="130" Height="50" Margin="150,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
			<Image Stretch="Uniform"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Margin="20,32.5,0,0"
				   Width="350"
				   Height="500"/>
		</Button>

		<Button x:Name="ShopButton" Width="90" Height="50" Margin="165,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
			<Image Stretch="Uniform"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Margin="20,3.5,0,0"
				   Width="350"
				   Height="500"/>
		</Button>

		<Button x:Name="KontaktButton" Width="110" Height="50" Margin="155,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
			<Image Stretch="Uniform"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Margin="33,-19,0,0"
				   Width="350"
				   Height="500"/>
		</Button>


		<Button x:Name="HoodieButton" Width="500" Height="500" Margin="43,250,30,0" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Image Source="/assets/hoodies.png"
				   Stretch="Uniform"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Margin="5,7,0,0"
				   Width="450"
				   Height="550"/>
		</Button>


		<Button x:Name="TshirtButton" Width="500" Height="500" Margin="43,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
			<Image Source="/assets/tshirt.png"
				   Stretch="Uniform"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Margin="-18,7,0,0"
				   Width="550"
				   Height="650"/>
		</Button>

		<Button x:Name="CapsButton" Width="500" Height="500" Margin="10,250,35,0" HorizontalAlignment="Right" VerticalAlignment="Center">
			<Image Source="/assets/caps.png"
				   Stretch="Uniform"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   Margin="-45,-80,0,0"
				   Width="550"
				   Height="6500"/>
		</Button>

	</Grid>
</UserControl>